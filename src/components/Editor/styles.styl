.editor
  position: relative
  display: flex
  width: calc(100vw - 10em)
  height: 35em
  max-height: calc(100vh - 10em)
  margin: auto auto
  background-color: white
  border-radius: 3px

  &:before
    z-index: -2
    content: ''
    position: absolute
    left: 1em
    top: -1em
    width: calc(100% - 2em)
    height: calc(100% - 2em)
    background-color: rgba(255, 255, 255, 0.15)
    border-radius: 3px

  &:after
    z-index: -1
    content: ''
    position: absolute
    left: .5em
    top: -.5em
    width: calc(100% - 1em)
    height: calc(100% - 1em)
    background-color: rgba(255, 255, 255, 0.3)
    border-radius: 3px