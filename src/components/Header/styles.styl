.header
  display: flex;
  justify-content: space-between
  align-items: center
  width: calc(100vw - 10em)
  margin-top: 1em

.logo
  width: 5em
  cursor: pointer

.auth-section
  display: flex
  width: 10em

.button
  flex: 1
  padding: .25rem .5rem
  font-size: .75rem
  text-align: center
  line-height: 1
  color: white
  white-space: nowrap
  background-color: transparent
  border: 2px solid white
  border-radius: 3px
  cursor: pointer

  &:not(:last-child)
    margin-right: .5em

  &:hover
    background-color: rgba(white, .15)
