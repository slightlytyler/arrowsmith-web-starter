.header
  display: flex;
  justify-content: space-between
  align-items: center
  width: calc(100vw - 10em)
  margin-top: 1em

.logo
  width: 5em
  cursor: pointer

.auth-section
  display: flex
  align-items: center
  width: 10em
  color: white

.button
  flex: 1
  padding: .25rem .5rem
  font-size: .75rem
  text-align: center
  line-height: 1
  white-space: nowrap
  background-color: transparent
  border: 2px solid currentColor
  border-radius: 3px
  cursor: pointer

  &:not(:last-child)
    margin-right: .5em

  &:hover
    background-color: rgba(white, .15)

.avatar
  width: 1.5em
  margin-right: .25rem
  border-radius: 3px

.name
  margin-right: .25rem
  font-size: .75em
  line-height: 1

.caret
  font-size: .5em