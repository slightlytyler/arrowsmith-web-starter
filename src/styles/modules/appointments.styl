.appointments__root
  padding-top: 9em

  .nav
    display: flex
    justify-content: space-between
    align-items: flex-end
    margin-bottom: 2em

    .filters
      display: flex

      & > .input
        &:not(:last-child)
          margin-right: 2em

        & > .label
          color: white

    .button
      background-color: #3B55E6
      border-color: #3B55E6

  .pagination
    display: flex
    justify-content: flex-end
    align-items: center
    margin-bottom: 2em

.appointments__table
  .loading-state .spinner
    font-size: 5em

.appointments__creator,
.appointments__editor,
.appointments__viewer
  display: flex
  flex-direction: column
  align-items: center
  padding: 9em 0 5em

  .loading-state
    display: flex
    justify-content: center
    align-items: center
    width: 30em
    height: 30em
    background-color: white
    border-radius: 4px
    box-shadow: 0 30px 40px 0 alpha(#222328, 0.2)

    .spinner
      font-size: 5em

.appointments__creator, .appointments__editor
  .header
    margin-bottom: 2em
    font-size: 2em
    color: white
    text-align: center

.appointments__form
  width: 30em

  .pui--checkbox input:checked + label
    background-color: #3B55E6
    border-color: #3B55E6

  .button
    background-image: linear-gradient(-269deg, #3B55E6 0%, #6A3FBD 100%)
    border-width: 0

.appointments__viewer
  .details
    width: 30em
    padding: 2em 4em
    background: white
    box-shadow: 0px 30px 40px 0px alpha(#1C1E23, 0.2)
    border-radius: 4px

    .header
      font-size: 2em
      font-weight: bold