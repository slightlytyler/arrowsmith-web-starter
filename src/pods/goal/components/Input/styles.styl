.content
  display: flex
  justify-content: flex-start
  align-items: center
  padding-bottom: 1em
  border-bottom: 1px solid #F0EBEC

.input
  flex: 1
  height: 100%
  font-size: 1em
  color: #ACAEB4
  background-color: transparent
  border-width: 0

  &:focus
    outline: none

.save-button
  font-weight: bold
  color: #ACAEB4

  &:hover, &:active
    color: #1EB5F9