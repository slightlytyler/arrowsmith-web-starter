.filters
  position: relative
  padding: 1em 1rem
  font-size: .5em
  color: #acaeb4
  background-color: white
  border-bottom-left-radius: 3px
  border-bottom-right-radius: 3px

  &, .list
    display: flex
    justify-content: flex-start
    align-items: center

  .list
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)

    .item
      padding: .25em .5em
      border: 1px solid #acaeb4
      border-radius: 3px
      cursor: pointer

      &:hover, &.active
        border-color: #1EB5F9

      &:not(:last-child)
        margin-right: 1em

  .remaining-count.complete
    color: #1EB5F9
