.page-container
  display: flex
  flex-direction: column
  align-items: center
  padding-top: 5em

.todo-container
  position: relative
  width: 100%
  max-width: 20em

  &:before
    z-index: -2
    content: ''
    position: absolute
    left: 1em
    top: -1em
    width: calc(100% - 2em)
    height: calc(100% - 2em)
    background-color: rgba(255, 255, 255, 0.15)
    border-radius: 3px

  &:after
    z-index: -1
    content: ''
    position: absolute
    left: .5em
    top: -.5em
    width: calc(100% - 1em)
    height: calc(100% - 1em)
    background-color: rgba(255, 255, 255, 0.3)
    border-radius: 3px

  .background
    display: flex
    flex-direction: column
    background-color: rgba(255, 255, 255, 0.45)
    border-radius: 3px
