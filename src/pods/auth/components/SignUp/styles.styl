.auth-container
  display: flex
  flex-direction: column
  align-self: center

.header
  margin-bottom: .5em
  font-size: .75em
  color: white

.input, .button
  padding: .5em
  font-size: 1em
  border-width: 0
  border-radius: 3px
  outline: none

.input
  margin-bottom: .25em
  color: white
  background-color: rgba(white, 0.15)

  &::placeholder
    color: rgba(white, .75)

.button
  color: #1EB5F9
  background-color: white
  cursor: pointer

  &:active
    color: white
    background-color: #1EB5F9
