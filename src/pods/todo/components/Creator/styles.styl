.creator
  &.editing .content
    margin: .75em 0

    &:before
      left: -.5em
      width: calc(100% + 1em)
      border-bottom-left-radius: 3px
      border-bottom-right-radius: 3px

  &:not(.editing) .content
    cursor: pointer

  .content
    position: relative
    display: flex
    align-items: center
    color: black

    &:before
      content: ''
      z-index: -1
      position: absolute
      left: 0
      top: 0
      width: 100%
      height: 100%
      background-color: white
      border-top-left-radius: 3px
      border-top-right-radius: 3px

    & > *
      padding-right: 1em
      padding-top: 1em
      padding-bottom: 1em

      &:first-child
        padding-left: 1em


  .add
    cursor: pointer

    &.button
      font-weight: bold
      color: #ACAEB4

      &:hover, &:active
        color: #1EB5F9

  .prompt, .input
    flex: 1
    height: 100%
    font-size: 1em
    color: #ACAEB4

  .input
    background-color: transparent
    border-width: 0

    &:focus
      outline: none

  .rule
    position: absolute
    bottom: 0
    left: 1em
    width: calc(100% - 2em)
    height: 1px
    margin: 0
    padding: 0
    background-color: #F0EBEC
    border-width: 0
