.item
  padding: 1em 1em 0
  color: #777880
  background-color: white

  &:last-child
    border-bottom-left-radius: 3px
    border-bottom-right-radius: 3px

  .content
    display: flex
    justify-content: flex-start
    align-items: center
    padding-bottom: 1em
    border-bottom: 1px solid #F0EBEC

  .checkbox
    display: flex
    margin-right: .75em

    .input
      display: none

    .label
      content: ''
      display: inline-block
      width: 1em
      height: 1em
      border: 2px solid #1EB5F9
      border-radius: 50%
      cursor: pointer
