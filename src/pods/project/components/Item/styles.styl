.item
  display: flex
  justify-content: space-between
  align-items: center
  padding-bottom: 1em
  color: #acaeb4
  border-bottom: 1px solid #f0ebec
  cursor: pointer

  &:hover
    color: #777880

  &:not(:last-child)
    margin-bottom: 1em

.item--active
  composes: item
  color: #1EB5F9
  cursor: default

  &:hover
    color: #1EB5F9

.remove
  margin-left: auto
  color: #F0EBEC
  cursor: pointer

  &:hover
    color: #F07366
