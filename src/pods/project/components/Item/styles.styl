.item
  display: flex
  justify-content: flex-end
  align-items: center
  color: #acaeb4
  border-bottom: 1px solid #f0ebec

  .name:hover
    color: #777880

.item--active
  composes: item
  color: #1EB5F9

  .name
    cursor: default

    &:hover
      color: #1EB5F9

.name
  flex: 1
  padding: 1em 0
  cursor: pointer

.edit
  margin-right: .25em
  color: #F0EBEC
  cursor: pointer

  &:hover
    color: #1EB5F9

.remove
  color: #F0EBEC
  cursor: pointer

  &:hover
    color: #F07366
