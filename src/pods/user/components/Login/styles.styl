.auth-container
  margin: auto auto

  & > form
    display: flex
    flex-direction: column

.header
  margin-bottom: .5em
  font-size: .75em
  color: white


.button
  padding: .5em
  font-size: 1em
  color: #1EB5F9
  background-color: white
  border-width: 0
  border-radius: 3px
  outline: none
  cursor: pointer

  &:active
    color: white
    background-color: #1EB5F9
